<p id="notice"><%= notice %></p>

<!--PROFILE PICTURE-->

<div class="profilepicture pull-left">
  <% if @user.image? %>
  <%= image_tag @user.image_url %>

<% elsif %>

  <div class="fileupload fileupload-new">
  <div class="fileupload-new thumbnail" style="width: 275px; height: 150px;"><img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" /></div>
  <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>  
  </div>
<% end %>

<!-- PROFILE PICTURE UPLOAD -->

<%= simple_form_for(@user, :html => { :class => 'form-inline' }) do |f| %>
<%= f.file_field :image, :style => 'border: none; color: transparent; padding: 10px;' %>
<%= f.button :submit, "Add Photo", :class => 'btn btn-primary fileupload-new' %>
<% end %>

<!-- FRIENDS -->

<h2>My Friends:</h2>
<ul>
  <% for friendship in @user.friendships %>
    <li><p>
      <%= friendship.friend.name %>
      (<%= link_to "remove", friendship, :method => :delete %>)
    </p></li>
  <% end %>
</ul>

<div class="btn btn-info">
  <%= link_to 'Add'+ ' ' + @user.name + ' ' + 'As A Friend', friendships_path(:friend_id => @user), :method => :post, style: 'color: white;' %>
</div>

<br /><br /><br />

<h2>My Followers:</h2>
<ul>
  <% for user in @user.inverse_friends %>
    <li><p><%= user.name %></p></li>
  <% end %>
</ul>
</div>

<div class="profilecontent">
<h1><%= best_in_place @user, :name %></h1>
<h2><%= best_in_place @user, :about, :nil => "Click To Add Your Bio Here" %></h2>

<h3>Update Your Status:</h3>
<%= simple_form_for(@user, :html => {:class => 'form-inline' }) do |f| %>
  <%= f.fields_for :microposts, @micropost do |c| %> 
    <%= c.text_field :content %>
  <% end %>
  
    <%= f.submit "Update Status", class: 'btn' %>
  <% end %>


<h3>Latest Status Updates</h3>
<% @user.microposts.each do |f| %>
  <ul><%= f.content %></ul>
<% end %>

  
<h3>My Work-Outs:</h3>
<%= simple_form_for(@user, :html => { :class => 'form-inline'}) do |e| %>
  <%= e.fields_for :exercises, @exercise do |builder| %>
    <%= builder.text_field :exercise_name %>
    <%= builder.text_field :exercise_prescription %>
  <% end %>
  <%= e.submit "Add Exercise", class: 'btn' %>
<% end %>

<% @exercises.each do |f| %>
<%= f.exercise_name %>
<%= f.exercise_prescription %><br />
<% end %>

<br />
<h3>Comments</h3>
<%= link_to "Add A New Comment", [:new, @commentable, :comment] %>

<% @comments.each do |comment| %>
  <%= simple_format comment.content %>
<% end %>

<h3>My Feed:</h3>

<% @feed.each do |f| %>
  <ul><%= image_tag f.user.image_url, style: "height: 50px; width: 50px;" %> <b><%= f.user.name %>:</b> <%= f.content %><br />
  <p><u style="border-bottom: .5px gray; font-size: 9px;"><%= f.created_at %></u></p></ul>
<% end %> 

<br /><br />
 
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

</div>
