<p id="notice"><%= notice %></p>

<h1><%= @user.name %></h1>
<%= @user.about %>

<%= form_for(@user) do |f| %>
  <%= f.label :about, "About Me:" %>
  <%= f.text_field :about, value: "I am an ultramarathoner..." %>
<% end %>

<h3>Status Updates:</h3>
<% @user.microposts.each do |f| %>
  <%= f.content %>
<% end %>

<!--Here if user logs in, they see this -->

<%= form_for(@user) do |f| %>
  <%= f.fields_for :microposts, @micropost do |c| %> 
    <%= c.text_field :content %>
  <% end %>
  <%= check_box_tag(:highfive) %><%= label_tag(:highfive, "Like") %>
    <%= f.submit %>
  <% end %>
  
<h3>My Work-Outs:</h3>

<% @exercises.each do |f| %>
<%= f.exercise_name %>
<%= f.exercise_prescription %><br />
<% end %>

<h3>Comments</h3>

<%= link_to "New Comment", [:new, @commentable, :comment] %>

<% @comments.each do |comment| %>
  <%= simple_format comment.content %>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
